# Saathi - Collaborative Task Manager
# Environment Configuration Template

# =============================================================================
# REDIS CONFIGURATION (Required for Production)
# =============================================================================
# Get these from Upstash Redis: https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Alternative Redis environment variable names (for compatibility)
KV_REST_API_URL=https://your-redis-url.upstash.io
KV_REST_API_TOKEN=your-redis-token
KV_URL=https://your-redis-url.upstash.io

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate a secure random string for session encryption
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Application URL (required for production)
NEXTAUTH_URL=http://localhost:3000
# For production: NEXTAUTH_URL=https://your-domain.com

# Session configuration
SESSION_MAX_AGE=86400
# Session timeout in seconds (86400 = 24 hours)

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Invitations per hour per user
RATE_LIMIT_INVITATIONS_MAX=10
RATE_LIMIT_INVITATIONS_WINDOW=3600000

# Login attempts per 15 minutes per user
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# Signups per hour per user
RATE_LIMIT_SIGNUP_MAX=3
RATE_LIMIT_SIGNUP_WINDOW=3600000

# Task operations per minute per user
RATE_LIMIT_TASKS_MAX=100
RATE_LIMIT_TASKS_WINDOW=60000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Application name and version
APP_NAME=Saathi
APP_VERSION=1.0.0

# Enable/disable features
ENABLE_REAL_TIME=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=false

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable error reporting (set to false in development)
ENABLE_ERROR_REPORTING=false

# Sentry DSN (if using Sentry for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# EMAIL CONFIGURATION (Optional - for future email notifications)
# =============================================================================
# SMTP configuration for sending invitation emails
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@your-domain.com

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================
# Vercel Analytics (if deployed on Vercel)
# VERCEL_ANALYTICS_ID=your-analytics-id

# Google Analytics (if using GA)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Enable debug mode (development only)
DEBUG=false

# Mock Redis (automatically enabled if Redis credentials not provided)
USE_MOCK_REDIS=auto

# Disable HTTPS requirement (development only)
DISABLE_HTTPS=true